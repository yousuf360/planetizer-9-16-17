@model IEnumerable<fyp_One.Models.Cater>

@{
    ViewBag.Title = "CaterList";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}



@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<div class="row">
    <div class="container" style="margin-top:30px;">
        <div class="row" style="text-align:center;">
            <h2>Add menu or Continue Adding Cater</h2>

            <p>Thousand of People search our directory to find best Wedding halls. Are you Listed?</p>

        </div>
        <div style="height:50px;"></div>

        <div class="row" style="text-align:center;">
            <div class="form-group">
                <div style="padding:20px">

                    <a href="/Dashboard/AddCater">
                        <input style="width:30%; align-self:center" type="submit" id="Manage-Venue" class="btn btn-primary" value="Add Cater" />
                    </a>
                    <a href="/Dashboard/MenuForm">
                    <input style="width:30%; align-self:center" type="submit" id="Manage-Venue" class="btn btn-primary" value="Add Menu" />
                    </a>
                </div>
                <div style="padding:20px">

                </div>
            </div>

        </div>
    </div>
</div>

<!-- /. ROW  -->

<div class="row" >
    <div class="col-md-7" >
        <!-- Advanced Tables -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>Cater List</h3>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    Cater Name
                                </th>
                                <th>
                    @Html.DisplayNameFor(model => model.User.first_name)
                </th>
                                <th>
                                    Action
                                </th>
                            </tr>
                         </thead>

                            @foreach (var item in Model)
                            {
                                <tbody>
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CaterServiceName)
                                        </td>
                                      <td>
                @Html.DisplayFor(modelItem => item.User.first_name)
            </td>
                                        <td>
                                           @* @Html.ActionLink("Edit", "Edit", new { id = item.Id })*@

                                           

                                            <button type="button" onclick="location.href='@Url.Action("CaterEdit", "Dashboard", new { id = item.Id })'" class="btn btn-primary">
                                                <i class="fa fa-edit "></i> Edit
                                            </button>
                                           
                                        </td>
                                    </tr>
                                </tbody>
                                
                            }

</table>
                </div>

            </div>
        </div>
        <!--End Advanced Tables -->
    </div>
</div>
<!-- /. ROW  -->


<style>
    a {
        color: #ffffff !important;
    }
</style>