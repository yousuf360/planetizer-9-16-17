@model IEnumerable<fyp_One.Models.VenueInfo>

@{
    ViewBag.Title = "VenueList";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<!-- /. ROW  -->

<div class="row">
    <div class="col-md-12">
        <!-- Advanced Tables -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3><strong>Venue List</strong></h3>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.venueName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.venueType)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.capacity)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.venueWebsite)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.venuePrice)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.venueDetail)
                                </th>
                                @*<th>
                                        @Html.DisplayNameFor(model => model.User.first_name)
                                    </th>*@
                                <th></th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tbody>
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.venueName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.venueType)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.capacity)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.venueWebsite)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.venuePrice)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.venueDetail)
                                    </td>
                                    @*<td>
                                            @Html.DisplayFor(modelItem => item.User.first_name)
                                        </td>*@
                                    <td>
                                       <button type="button" onclick="location.href='@Url.Action("VenueEdit", "Dashboard", new { id = item.venueInfo_Id })'" class="btn btn-primary">
                                            <i class="fa fa-edit "></i> Edit
                                           </button>
                                     
                                        @*|
                                        @Html.ActionLink("Details", "Details", new { id = item.venueInfo_Id }) |
                                        @Html.ActionLink("Delete", "VenueDelete", new { id = item.venueInfo_Id })*@
                                    </td>
                                </tr>
                            </tbody>
                        }

                    </table>
                </div>

            </div>
        </div>
        <!--End Advanced Tables -->
    </div>
</div>
<!-- /. ROW  -->

@section Scripts{
<script src="assets/js/dataTables/jquery.dataTables.js"></script>
<script src="assets/js/dataTables/dataTables.bootstrap.js"></script>
    <script>
            $(document).ready(function () {
                $('#dataTables-example').dataTable();
            });

   </script>

<script src="assets/js/custom-scripts.js"></script>


    }

